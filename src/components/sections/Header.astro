---
import Section from "../Section.astro";
import {image_header,name} from '@projects'
---


<Section>
    <header class="flex content-center justify-center mt-14">
        <figure>
            <img src={image_header} alt={name} class="aspect-[1/1] object-cover w-80 rounded-md" />
        </figure>
        <div class="flex flex-col justify-center ml-4">
            <h2 class="text-2xl font-bold">{name}'s</h2>
            <h1 class="text-4xl">Tiny Showcase!</h1>
        </div>
    </header>
</Section>